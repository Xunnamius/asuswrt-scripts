#!/bin/sh

case "$1" in
    "start")
        SCRIPT="$(nvram get script_usbmount)"
        if [ -n "$SCRIPT" ]; then
            logger -t "$(basename "$0")" "Executing command in \"script_usbmount\"..."
            eval "$SCRIPT"
        fi
    ;;
    "stop")
        SCRIPT="$(nvram get script_usbumount)"
        if [ -n "$SCRIPT" ]; then
            logger -t "$(basename "$0")" "Executing command in \"script_usbumount\"..."
            eval "$SCRIPT"
        fi
    ;;
esac
